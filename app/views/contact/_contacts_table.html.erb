<table class="table">
  <thead>
  <tr>
    <th>Nome</th>
    <th>E-mail</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @contacts.each do |contact| %>
      <tr>
        <th><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td>
          <a class="btn btn-info btn-xs details" data-item="<%= contact.id %>">
            <i class="fa fa-info-circle" aria-hidden="true"></i> Detalhes
          </a>
        </td>
      </tr>
  <% end %>
  <% if @contacts.empty? %>
      <tr><th colspan="3" rowspan="3" class="text-center">Não há contatos cadastrados.</th></tr>
  <% end %>
  </tbody>
</table>

<%= paginate @contacts %>
